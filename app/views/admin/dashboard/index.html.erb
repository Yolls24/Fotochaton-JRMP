<h1 class="mb-4">Tableau de bord Admin</h1>

<p>Bienvenue, <%= current_user.email %> !</p>

<div class="row mt-4">
  <!-- Section Utilisateurs -->
  <div class="col-md-6">
    <h2>Utilisateurs</h2>
    <ul class="list-group">
      <% @users.each do |user| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span>
            <%= user.email %>
            <% if user.admin? %>
              <span class="badge bg-success ms-2">Admin</span>
            <% end %>
          </span>

          <div>
            <% unless user.admin? %>
              <%= button_to "Promouvoir en Admin",
                    admin_make_admin_user_path(user),
                    method: :patch,
                    class: "btn btn-sm btn-warning me-1" %>
            <% else %>
              <% unless user == current_user %> <!-- Empêche de se rétrograder soi-même -->
                <%= button_to "Rétrograder",
                      admin_remove_admin_user_path(user),
                      method: :patch,
                      class: "btn btn-sm btn-danger" %>
              <% end %>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>

  <!-- Section Items -->
  <div class="col-md-6">
    <h2>Items</h2>
    <div class="row row-cols-1 row-cols-md-2 g-3">
      <% @items.each do |item| %>
        <div class="col">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title"><%= item.name %></h5>
              <p class="card-text"><%= item.price %> €</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
