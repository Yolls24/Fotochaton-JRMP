<h1 class="dashboard-title">Tableau de bord Admin</h1>

<p class="welcome-text">Bienvenue, <%= current_user.email %> !</p>

<div class="dashboard-row">
  <!-- Section Utilisateurs -->
  <div class="dashboard-col">
    <h2 class="section-title">Utilisateurs</h2>
    <ul class="user-list">
      <% @users.each do |user| %>
        <li class="user-item">
          <span>
            <%= user.email %>
            <% if user.admin? %>
              <span class="badge-admin">Admin</span>
            <% end %>
          </span>

          <div>
            <% unless user.admin? %>
              <%= button_to "Promouvoir en Admin",
                    admin_make_admin_user_path(user),
                    method: :patch,
                    class: "btn btn-warning" %>
            <% else %>
              <% unless user == current_user %>
                <%= button_to "Rétrograder",
                      admin_remove_admin_user_path(user),
                      method: :patch,
                      class: "btn btn-danger" %>
              <% end %>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>

  <!-- Section Items -->
  <div class="dashboard-col">
    <h2 class="section-title">Items</h2>
    <div class="items-grid">
      <% @items.each do |item| %>
        <div class="item-card">
          <h5 class="item-title"><%= item.name %></h5>
          <p class="item-price"><%= item.price %> €</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
