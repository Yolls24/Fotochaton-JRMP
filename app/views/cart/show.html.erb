<h2 class="fw-bold text-mauve mb-4">Votre panier</h2>

<table class="table">
  <thead>
    <tr>
      <th>Produit</th>
      <th>Prix</th>
      <th>Quantité</th>
      <th>Total</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% total = 0 %>
    <% @items.each do |item| %>
      <div class="card mb-3">
        <%= image_tag item.image, alt: item.name, class: "card-img-top" %>
        <div class="card-body">
          <h5><%= item.name %></h5>
          <p><%= item.description %></p>
          <p>Quantité : <%= session[:cart][item.id.to_s] %></p>
          <%= button_to "Supprimer", cart_remove_path(item_id: item.id), method: :delete, class: "btn btn-danger" %>
        </div>
      </div>
    <% end %>
  </tbody>
</table>

<div class="text-end">
  <h4 class="fw-bold">Total : <%= number_to_currency(total, unit: "€") %></h4>
  <%= button_to "Payer avec Stripe", checkout_create_path, method: :post, class: "btn btn-mauve mt-3" %>
</div>
